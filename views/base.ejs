<%- include('header')-%>
<div class="text-center center-div" id="login">
    <div class="container border border-dark py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span class="logintext text-center text-light ">Log in for the existing user</span>
        </div>
        <form action="#" class="form ">
            <div class="form-group ">
                <input type="email" class="form-control" placeholder="email">
                <small class="form-text text-muted text-left ">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="password">
            </div>
            <button type="submit" class="btn btn-primary rounded-pill">submit</button>
        </form>
    </div>
</div>
<%- include('footer')-%>
